@model IEnumerable<VirtualLibrary.Models.Books_Availability>

@{
    ViewBag.Title = "Availability Index";
}

<div id="insert_availability_modal" class="modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="insert_availability_modalContent">
            @Html.Action("Create")
        </div>
    </div>
</div>

<div id="delete_availability_modal" class="modal" data-url="@Url.Action("Delete")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Delete Availability</h4>
            </div>
            <div class="modal-body" id="delete_availability_modal_body">
            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn btn-danger" id="delete_availability_modal_close_button">
                    <i class="fa fa-close fa-lg"></i>
                    <strong>Cancel</strong>
                </a>
                <button data-dismiss="modal" class="btn btn-success" id="delete_availability_modal_submit_button">
                    <i class="fa fa-check fa-lg"></i>
                    <strong>Apply</strong>
                </button>
            </div>
        </div>
    </div>
</div>

<div id="edit_availability_modal" class="modal" role="dialog" aria-hidden="true" data-url="@Url.Action("Edit")">
    <div class="modal-dialog">
        <div class="modal-content" id="edit_availability_modalContent">
        </div>
    </div>
</div>


<div class="row">
    @Html.Partial("_SideNavBar")
    <div class="page-main-layout col-lg-10">
        <div class="col-lg-12">
            <h1 class="page-header">Available books</h1>
        </div>
        <!-- /.col-lg-12 -->

        <div class="col-lg-12">
            <div class="panel panel-availability">
                <div class="panel-heading panel-heading-availability">
                    <div class="btn-group pull-right">
                        <button class="btn btn-default" id="insert_availability_button" data-toggle="tooltip" title="Insert book to library">
                            <i class="fa fa-plus fa-lg">
                            </i>
                            <strong>Insert</strong>
                        </button>
                        <button class="btn btn-default" id="delete_availability_button" data-toggle="tooltip" title="Delete books from library">
                            <i class="fa fa-trash fa-lg"></i>
                            <strong>Delete</strong>
                        </button>
                        <button class="btn btn-default" id="edit_availability_button" data-toggle="tooltip" title="Edit number of books in library">
                            <i class="fa fa-pencil fa-lg"></i>
                            <strong>Edit</strong>
                        </button>
                    </div>
                    <h4>Overview</h4>
                </div>

                <div class="panel-body">
                    <div class="dataTables_wrapper">
                        <table class="table table-striped table-bordered table-hover select" id="availability_overview_table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Book</th>
                                    <th>Library</th>
                                    <th>Total</th>
                                    <th>Reserved</th>
                                    <th>Available</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Books.title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Libraries.Building)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.reserved)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.available)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <a href="@Url.Action("Index", "LibrarianDashboard")" class="btn btn-primary" id="back-button" data-toggle="tooltip" title="Return to Dashboard">
                                <i class="fa fa-mail-reply fa-lg"></i>
                                <strong>Back</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="notifications" id="availability_view_notification"></div>

<script src="@Url.Content("~/Scripts/js/availability.view.js")"></script>
