@model VirtualLibrary.Models.Users
@{
    ViewBag.Title = "Profile";
}

<div id="insert_image_modal" class="modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="insert_modal_modalContent">
            @Html.Action("GetFileUpload")
        </div>
    </div>
</div>

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">


        <dd>
            @if (Model.image == null)
            {
                <img src="~/Content/images/no_available_image.png" alt="">
            }
            else
            {
                string imageBase64 = Convert.ToBase64String(Model.image);
                string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                <img src="@imageSrc" width="100" height="100" />
            }


            <button id='upload'>Upload profile picture</button>

        </dd>
        <dt>First Name: </dt>
        <dd>
            @Html.DisplayFor(model => model.first_name)
        </dd>
        <dt>Last Name: </dt>
        <dd>
            @Html.DisplayFor(model => model.last_name)
        </dd>
        <dt>UserName:</dt>
        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt>Id: </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>Date of Birth: </dt>
        <dd>
            @Html.DisplayFor(model => model.date_of_birth)
        </dd>
        <dt>Date of Registration: </dt>
        <dd>
            @Html.DisplayFor(model => model.date_of_registration)
        </dd>
        <dt>Membership ID: </dt>
        <dd>
            @Html.DisplayFor(model => model.membership_id)
        </dd>
        <dd>

            @Html.ActionLink("Change your password", "ChangePassword")

        </dd>

        <dt>Reservations: </dt>
        <dd>
            @Html.DisplayFor(model => model.Reservations)
        </dd>


