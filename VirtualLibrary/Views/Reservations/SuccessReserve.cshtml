@model VirtualLibrary.Models.Reservations


@{
    ViewBag.Title = "SuccessReserve";
}
<div class="row">
    <div class="page-main-layout col-lg-6 col-lg-offset-3">
        <div class="col-lg-12 top-padding">

            @if (ViewBag.StatusMessage != null)
            {
                <div class="text-center">
                    <h1 class="alert alert-danger">@ViewBag.StatusMessage</h1>
                </div>
            }

            @if (ViewBag.StatusSuccessMessage != null)
            {
                <div class="text-center">
                    <h1 class="success alert-success">@ViewBag.StatusSuccessMessage</h1>
                </div>




                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Books.title, "title", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Books.title, "title", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Users.username, "username", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Users.username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.reserved_date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.reserved_date, new { htmlAttributes = new { @class = "form-control", id = "datepickerReserve" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.return_date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.return_date, new { htmlAttributes = new { @class = "form-control", id = "datepickerReturn" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Libraries.Building, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Libraries.Building, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                </div>

                <div class="fb-share-button" 
                     data-href='@string.Format("https://127.0.0.1:44358/Search/GetBook/{0}", Model.book_id)' 
                     data-layout="button" data-size="large" data-mobile-iframe="false">
                    <a class="fb-xfbml-parse-ignore" target="_blank" 
                       href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2F127.0.0.1%3A44358%2FSearch%2FGetBook%2F1&amp;src=sdkpreparse">
                    Share</a>
                </div>
                <a href="https://twitter.com/share" class="twitter-share-button" data-show-count="false">Tweet</a>
                <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>

            }
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a href="@Url.Action("Index", "Search")" class="btn btn-primary" id="back-button" data-toggle="tooltip" title="Return to Search">
                        <i class="fa fa-mail-reply fa-lg"></i>
                        <strong>Back to Search</strong>
                    </a>
                </div>
            </div>

        </div>
    </div>

</div>
