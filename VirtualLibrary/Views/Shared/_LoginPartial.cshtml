@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-top-links navbar-right">
            <li><a href="#">Home</a></li>
            <li>
                <a href="@Url.Action("Index", "Books")" data-toggle="tooltip" title="Books overview"> Books</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Libraries")" da data-toggle="tooltip" title="Libraries overview"> Libraries</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Manage")">
                    <i class="fa fa-user fa-fw"></i> Profile
                </a>
            <li>
                @if (User.IsInRole("Admin"))
                {
                <li>
                    <a href="@Url.Action("Users", "Account")" data-toggle="tooltip" title="Users overview"><i class="fa fa-users fa-fw"></i> Users</a>
                </li>
                <li>
                    <a href="@Url.Action("Roles", "Account")" data-toggle="tooltip" title="Roles overview"><i class="fa fa-tasks fa-fw"></i> Roles</a>
                </li>
                }
                <li class="dropdown">
                    <a id="drop1" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                        @User.Identity.GetUserName()
                    </a>
                </li>


                <li class="divider"></li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </li>
            </ul>

    }
}
else
{
    <ul class="nav navbar-top-links navbar-right">
        <li><a href="#">Home</a></li>
        <li><a href="#">Books</a></li>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
