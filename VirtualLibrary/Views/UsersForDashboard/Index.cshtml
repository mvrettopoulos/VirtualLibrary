@model IEnumerable<VirtualLibrary.Models.Users>

<div id="activate_usersdashboard_modal" class="modal" data-url="@Url.Action("Activate")" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="activate_usersdashboard_modalContent">
            <div class="modal-header">
                <h4 class="modal-title">Activate</h4>
            </div>
            <div class="modal-body" id="activate_usersdashboard_modal_body">

            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn btn-danger" id="activate_usersdashboard_modal_close_button">
                    <i class="fa fa-close fa-lg"></i>
                    <strong>Cancel</strong>
                </a>
                <button data-dismiss="modal" class="btn btn-success" id="activate_usersdashboard_modal_submit_button">
                    <i class="fa fa-check fa-lg"></i>
                    <strong>Apply</strong>
                </button>
            </div>
        </div>
    </div>
</div>

<div id="switch_usersdashboard_modal" class="modal" data-url="@Url.Action("Switch_State")" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="switch_usersdashboard_modalContent">
            <div class="modal-header">
                <h4 class="modal-title">Switch State</h4>
            </div>
            <div class="modal-body" id="switch_usersdashboard_modal_body">

            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn btn-danger" id="switch_usersdashboard_modal_close_button">
                    <i class="fa fa-close fa-lg"></i>
                    <strong>Cancel</strong>
                </a>
                <button data-dismiss="modal" class="btn btn-success" id="switch_usersdashboard_modal_submit_button">
                    <i class="fa fa-check fa-lg"></i>
                    <strong>Apply</strong>
                </button>
            </div>
        </div>
    </div>
</div>


<div class="row">
    @Html.Partial("_SideNavBar")
    <div class="page-main-layout col-lg-10">
        <div class="col-lg-12">
            <h1 class="page-header">Users</h1>
        </div>
        <!-- /.col-lg-12 -->
    
        <div class="col-lg-12">
            <div class="panel panel-usersdashboard">
                <div class="panel-heading panel-heading-usersdashboard">
                    <div class="btn-group pull-right">
                        <div class="btn-group pull-right">
                            <button class="btn btn-default" id="activate_user_button" data-toggle="tooltip" title="Activate User">
                                <i class="fa fa-check-square fa-lg"></i>
                                <strong>Activate</strong>
                            </button>
                        </div>
                    </div>
                    <h4>Inactive Users</h4>
                </div>
                <div class="panel-body">
                    <div class="dataTables_wrapper">

                        <table class="table table-striped table-bordered table-hover select" id="inactive_usersdashboard_overview_table">
                            <thead>

                                <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.username)
                                </th>
                                <th>
                                    Registratio Date
                                </th>
                                <th>
                                    Membership Id
                                </th>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Email
                                </th>
                            </tr>

                            </thead>

                            <tbody>

                                @foreach (var item in ViewBag.inactive_users)
                                {
                                    <tr>
                                        <td>
                                            @item.id
                                        </td>
                                        <td>
                                            @item.username
                                        </td>
                                        <td>
                                            @item.date_of_registration
                                        </td>
                                        <td>
                                            @item.membership_id
                                        </td>
                                        <td>
                                            @item.first_name
                                        </td>
                                        <td>
                                            @item.last_name
                                        </td>
                                        <td>
                                            @item.AspNetUsers.Email
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
            <div class="panel panel-usersdashboard">
                <div class="panel-heading panel-heading-usersdashboard">
                    <div class="btn-group pull-right">
                        <div class="btn-group pull-right">
                            <button class="btn btn-default" id="switchstate_user_button" data-toggle="tooltip" title="Switch User State">
                                <i class="fa fa-flag  fa-lg"></i>
                                <strong>Switch State</strong>
                            </button>
                        </div>
                    </div>
                    <h4>All Users</h4>
                </div>
                <div class="panel-body">
                    <div class="dataTables_wrapper">

                        <table class="table table-striped table-bordered table-hover select" id="usersdashboard_overview_table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.username)
                                    </th>
                                    <th>
                                        Membership ID
                                    </th>
                                    <th>
                                        Bad / Good
                                    </th>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.id
                                    </td>
                                    <td>
                                        @item.username
                                    </td>
                                    <td>
                                        @item.membership_id
                                    </td>
                                    @if ((bool)item.bad_user)
                                        {
                                        <td>Bad</td>
                                        }
                                        else
                                        {
                                        <td>Good</td>
                                        }
                                    <td>
                                        @item.first_name
                                    </td>
                                    <td>
                                        @item.last_name
                                    </td>
                                    <td>
                                        @item.AspNetUsers.Email
                                    </td>
                                </tr>
                                }
                            </tbody>


                        </table>



                    </div>
                </div>

                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <a href="@Url.Action("Index", "LibrarianDashboard")" class="btn btn-primary" id="back-button" data-toggle="tooltip" title="Return home">
                                <i class="fa fa-mail-reply fa-lg"></i>
                                <strong>Back</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="notifications" id="usersdashboard_view_notification"></div>
<script src="@Url.Content("~/Scripts/js/usersdashboard.view.js")"></script>